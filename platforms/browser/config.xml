<?xml version='1.0' encoding='utf-8'?>
<widget id="it.bloomdesign.connect4" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Connect4</name>
    <description>
        Connect4 IOS App
    </description>
    <author email="info@bloomdesign.it" href="http://www.bloomdesign.it">
        Bloom Design
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
